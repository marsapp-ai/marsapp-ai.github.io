---
import { Icon } from 'astro-icon/components';
---

<section class="flex flex-col items-center justify-center min-h-screen py-24" id="advantages">
  <div class="w-full text-center">
    <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-12">Advantages of using our platform</h1>
  </div>

  <div class="grid grid-cols-3 grid-rows-1 gap-6 max-w-5xl px-4">
    <!-- Left Column -->
    <div class="flex flex-col space-y-8">
      <div class="p-6 bg-gray-100 dark:bg-gray-800 rounded-lg shadow flex flex-col items-center space-y-2 h-full">
        <Icon name="tabler:checklist" class="w-12 h-12 text-gray-700 dark:text-white" />
        <p class="text-center font-bold text-gray-900 dark:text-gray-200">
          one platform for all your transportation needs
        </p>
      </div>
      <div class="p-6 bg-gray-100 dark:bg-gray-800 rounded-lg shadow flex items-center space-x-2 h-full">
        <Icon name="tabler:search" class="w-12 h-12 text-gray-700 dark:text-white order-1" />
        <p class="text-center font-bold text-gray-900 dark:text-gray-200 order-2">find the best solution</p>
      </div>
      <div class="p-6 bg-gray-100 dark:bg-gray-800 rounded-lg shadow flex items-center space-x-2 h-full">
        <p class="text-center font-bold text-gray-900 dark:text-gray-200 order-1">check the driver's ratings</p>
        <Icon name="tabler:star" class="w-12 h-12 text-gray-700 dark:text-white order-2" />
      </div>
      <div class="p-6 bg-gray-100 dark:bg-gray-800 rounded-lg shadow flex items-center space-x-2 h-full">
        <p class="text-center font-bold text-gray-900 dark:text-gray-200 order-1">
          dedicated mobile application for the driver
        </p>
        <Icon name="tabler:device-mobile" class="w-12 h-12 text-gray-700 dark:text-white order-2" />
      </div>
    </div>

    <!-- Middle Column -->
    <div class="flex flex-col space-y-8">
      <div class="p-6 bg-gray-100 dark:bg-gray-800 rounded-lg shadow flex items-center space-x-2 h-full">
        <Icon name="tabler:map-pin" class="w-12 h-12 text-gray-700 dark:text-white order-1" />
        <p class="text-center font-bold text-gray-900 dark:text-gray-200 order-2">
          monitor your transport in real time
        </p>
      </div>
      <div class="p-6 bg-gray-100 dark:bg-gray-800 rounded-lg shadow flex items-center space-x-2 h-full">
        <p class="text-center font-bold text-gray-900 dark:text-gray-200 order-1">
          sign the contract directly from the app
        </p>
        <Icon name="tabler:file-text" class="w-12 h-12 text-gray-700 dark:text-white order-2" />
      </div>
      <h1 class="text-3xl font-bold text-center text-accent dark:text-white p-8">rethink transportation</h1>
      <div class="p-6 bg-gray-100 dark:bg-gray-800 rounded-lg shadow flex items-center space-x-2 h-full">
        <p class="text-center font-bold text-gray-900 dark:text-gray-200 order-1">
          negotiate the price directly with the transporter
        </p>
        <Icon name="tabler:heart-handshake" class="w-12 h-12 text-gray-700 dark:text-white order-2" />
      </div>
    </div>

    <!-- Right Column -->
    <div class="flex flex-col space-y-8">
      <div class="p-6 bg-gray-100 dark:bg-gray-800 rounded-lg shadow flex flex-col items-center space-y-2 h-full">
        <Icon name="tabler:truck" class="w-12 h-12 text-gray-700 dark:text-white" />
        <p class="text-center font-bold text-gray-900 dark:text-gray-200">
          search for cargo so your fleet is always on the move
        </p>
      </div>
      <div class="p-6 bg-gray-100 dark:bg-gray-800 rounded-lg shadow flex items-center space-x-2 h-full">
        <p class="text-center font-bold text-gray-900 dark:text-gray-200 order-1">
          use AI to speed up interaction with possible carriers
        </p>
        <Icon name="tabler:settings-automation" class="w-12 h-12 text-gray-700 dark:text-white order-2" />
      </div>
      <div class="p-6 bg-gray-100 dark:bg-gray-800 rounded-lg shadow flex items-center space-x-2 h-full">
        <Icon name="tabler:package" class="w-12 h-12 text-gray-700 dark:text-white order-1" />
        <p class="text-center font-bold text-gray-900 dark:text-gray-200 order-2">
          find the best price for even the smallest parcel
        </p>
      </div>
      <div class="p-6 bg-gray-100 dark:bg-gray-800 rounded-lg shadow flex items-center space-x-2 h-full">
        <p class="text-center font-bold text-gray-900 dark:text-gray-200 order-1">
          manage fleets from multiple sources
        </p>
        <Icon name="tabler:truck-delivery" class="w-12 h-12 text-gray-700 dark:text-white order-2" />
      </div>
    </div>
  </div>
</section>
