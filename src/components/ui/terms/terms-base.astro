---
import Layout from '../../../layouts/PageLayout.astro';
import { SITE } from 'mars:config';

export interface Props {
  language?: string;
}

const { language = 'en' } = Astro.props;
const response = await fetch(`${SITE.site}/docs/terms-and-conditions-${language}.html`);
---

<Layout>
  <section class="terms-and-conditions">
    <div id="terms-content" class="content" set:html={response} />
  </section>
</Layout>

<style>
  .terms-and-conditions {
    padding: 2rem;
  }
  .content {
    max-width: 800px;
    margin: 0 auto;
  }
</style>
